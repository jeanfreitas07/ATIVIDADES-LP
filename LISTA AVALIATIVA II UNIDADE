# import random
# cont=0# Solicita o valor de N ao usuário
N = int(input("Digite um número: "))

# Parte crescente
for i in range(1, N+1):
    for j in range(i):
        print(i, end="")
    print()

# Parte decrescente
for i in range(N-1, 0, -1):
    for j in range(i): print()
        print(i, end="")
    print()
