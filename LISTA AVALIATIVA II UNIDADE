#12
import random
n= random.randint(-100,100)
nmaior= nmenor=n
for i in range (7):
    n=random.randint(0,100)
    if n > nmaior:
        nmaior=n
    elif n < nmenor:
        nmenor=n
dif= nmaior-nmenor 
print(f"a diferença é {dif}."

#13
import random
num=random.randint(0,8)
menor = num  
for i in range(8):
    # num=random.randint(0,8)
    num=int(input("digite 8 numeros:"))
    if num < menor:
        menor = num
print(f"{menor}numero proximo de 0")

