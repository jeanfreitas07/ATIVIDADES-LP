#2
import random 
pares = 0
for i in range (20):
    num = random.randint(0,20)
    print(num)
    if num %2==0:
        pares += 1 
print("num pares são",pares)

#3
import random
somaid=0
for i in range (5):
    idade = random.randint (0,5)
    somaid += idade
media = somaid /5
print("a media é",media)

#4
import random
fatorial=1 
num = random.randint (0,10)
print(num)
for i in range (num):
    fatorial = fatorial * (num - i)
print("o numero fatorial é",fatorial)

