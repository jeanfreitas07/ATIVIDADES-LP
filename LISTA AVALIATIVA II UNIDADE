#21
linhas=int(input("digite quntas linhas deve ser impresa:"))
for i in range (linhas):
    for j in range (i):
         print ("*",end="")
    print("")

#22
linhas=int(input("digite quntas linhas deve ser impresa:"))
for i in range (linhas):
    for j in range (linhas - i):
         print ("*",end="")
    print("")
