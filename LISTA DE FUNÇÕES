atvidade 1
# estoque=produtos e valores armazenados

estoque={"arroz":10,
        "feijao":20,
        "macarrao":15,
        "grao de bico":2}
# adiconar produto

def novo_produto(estoque,produto,quantidade):
    if produto in estoque:
        print(f"esse produto:,{produto} ,já existe")
    else:
        print(f"o produto:,{produto} ,foi adiconado")
# atualizar estoque
        
def atualizar_estoque(estoque,produto,quantidade):
    if produto in estoque:
        print(f"o produto ,{produto}, foi atiualizado!")
    else:
        print(f"esse produto,{produto},não existe")
# remover estoque
        
def remover_produto(estoque,produto):
    if produto in estoque:
        print(f"o produto,{produto},foi removido")
        del estoque[produto]
    else:
        print(f"o produto,{produto},não existe") 

# verificar a quantidadade do produto
def verificar_quant_produto(estoque,produto):
    if produto in estoque:
        quantidade = estoque[produto]
        print(f"a quantidade do produto {produto} é {quantidade}")
    else:
        print(f"O produto {produto}não existe no estoque!")


  

        















